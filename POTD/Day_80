   def missingNumber(self, arr):
        # code here
        
        n = len(arr)
        i = 0
        while i < n:
            v = arr[i]
            if 1 <= v <= n and arr[v - 1] != v:  # correct slot not occupied
                arr[i], arr[v - 1] = arr[v - 1], arr[i]
            else:
                i += 1
    
        for k, v in enumerate(arr, start=1):
            if v != k:
                return k
        return n + 1
