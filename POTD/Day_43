import math
class Solution:
    def smallestDivisor(self, arr, k):
        # Code here
        def f(mid):
            cnt = 0
            for i in arr:
                cnt += math.ceil(i/mid)
            return cnt <= k
            
        l, r = 1, 10**9
        ans = 10**9
        while(l <= r):
            mid = (l + r) // 2
            if f(mid):
                ans = mid
                r = mid - 1
            else:
                l = mid + 1
        return ans
