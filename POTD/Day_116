class Solution:
    def countTriangles(self, arr):
        # code here
        n = len(arr)
        arr.sort()
        final = 0
        for i in range(n-1,1,-1):
            j = 0
            k = i-1
            while j<k:
                if arr[j]+arr[k]>arr[i]:
                    final += (k-j)
                    k-=1
                else:
                    j+=1
                    
        return final
